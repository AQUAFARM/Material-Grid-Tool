  fill color=#400091EA
inset no-clip left=56dp width=16dp
  fill color=#400091EA
inset no-clip right=0dp width=16dp
  fill color=#400091EA
guide gravity=left  distance=16dp
guide gravity=right distance=16dp
guide gravity=left  distance=72dp
guide gravity=left  distance=56dp outside

# Hybrid grid
grid-lines gravity=top  step=8dp
grid-lines gravity=left step=8dp
inset left=72dp right=16dp
  grid-lines gravity=top step=8dp offset=4dp color=#800091EA
guide gravity=left  distance=16dp
guide gravity=right distance=16dp
guide gravity=left  distance=72dp

# Split-screen aligned 8dp
grid-lines gravity=top   step=8dp
grid-lines gravity=left  step=8dp limit=4
grid-lines gravity=right step=8dp limit=4

